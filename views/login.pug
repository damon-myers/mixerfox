extends ./layout.pug

block title
	title Login - MixerFox

block content
	.container.login-content
		.row
			.login-box.col-sm-6
				h2.
					Existing Users
				form.login-form
					.form-group
						input.form-control(type='text', name='username', placeholder='Email', required='', autofocus='')
					.form-group
						input.form-control(type='password', name='password', placeholder='Password', required='')
					button.btn.btn-lg.btn-primary.btn-block(type='submit').
						Login
			.login-box.col-sm-6
				h2. 
					New Users
				form.login-form
					.form-group
						input.form-control(type='text', name='firstname', placeholder='First Name', required='')
					.form-group
						input.form-control(type='text', name='lastname', placeholder='Last Name', required='')
					.form-group
						input.form-control(type='text', name='username', placeholder='Email', required='')
					.form-group
						input.form-control(type='password', name='password', placeholder='Password', required='')
					button.btn.btn-lg.btn-primary.btn-block(type='submit').
						Register
