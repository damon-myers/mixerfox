// layout template for consistent page features

doctype html
html(lang="en")
	head
		block title
			title MixerFox
		script(src='./js/jquery-2.2.3.min.js')
		script(src='./js/bootstrap.min.js')
		script(src='./js/jquery-ui.min.js')
		link(rel='stylesheet', href='css/bootstrap.min.css')
		link(rel='stylesheet', href='css/jquery-ui.min.css')
		link(rel='stylesheet', href='css/jquery-ui.structure.min.css')
		link(rel='stylesheet', href='css/jquery-ui.theme.min.css')
		link(rel='stylesheet', type='text/css', href='https://fonts.googleapis.com/css?family=Open+Sans:400,700')
		link(rel='stylesheet', href='https://maxcdn.bootstrapcdn.com/font-awesome/4.6.1/css/font-awesome.min.css')
		link(rel='stylesheet', href='css/style.css')
	body
		nav.navbar.navbar-default.navbar-fixed-top
			.container-fluid
				.navbar-header
					a.navbar-brand(href='/') Mixer#[.highlight-text Fox]
				ul.nav.navbar-nav.navbar-right
					if page == 'Home'
						li.nav-item.active
							a.nav-link(href='/') Home
					else
						li.nav-item
							a.nav-link(href='/') Home
					if page == 'Upload'
						li.nav-item.active
							a.nav-link(href='/upload') Upload
					else
						li.nav-item
							a.nav-link(href='/upload') Upload
					if page == 'Create'
						li.nav-item.active
							a.nav-link(href='/create') Create Playlist
					else
						li.nav-item
							a.nav-link(href='/create') Create Playlist
					if loggedIn
						li.nav-item
							a.nav-link(href='/account') My Mixes
						li.nav-item
							a.nav-link(href='/logout') Logout
					else
						if page == 'Login'
							li.nav-item.active
								a.nav-link(href='/login') Login / Sign Up
						else
							li.nav-item
								a.nav-link(href='/login') Login / Sign Up
					li.nav-item
						form.navbar-form(action='/search')
							input.form-control(type='text', name='queryTerms', placeholder='Search for songs')

		block content