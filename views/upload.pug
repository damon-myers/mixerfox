extends ./layout.pug

block title
	title Upload - MixerFox

block content
	.container.main-content
		.row
			.col-sm-12.main-content-box
				h2.
					Upload Songs
				hr
				form(action='/upload', enctype='multipart/form-data', method='POST')
					.row
						.form-group.col-sm-4
							label.
								Song Name:
							input.form-control(type='text', name='playlist-name', placeholder='Song Name', required='', autofocus='')
						.form-group.col-sm-4
							label.
								Artist:
							input.form-control(type='text', name='artist-name', placeholder='Artist Name')
						.form-group.col-sm-4
							label. 
								Song File:
							input(type='file', name='song-file')
					.row
						.form-group.col-sm-2.col-sm-offset-10
							button.btn-primary.btn-block(type='button')
								i.fa.fa-plus(aria-hidden='true')
					hr
					.row
						.form-group.col-sm-2.col-sm-offset-10
							button.btn-primary.btn-lg.btn-block(type='submit').
								Done